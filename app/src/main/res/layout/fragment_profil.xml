<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".ui.fragments.ProfilFragment">

    <LinearLayout
        android:id="@+id/container_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="128dp"
        android:background="@drawable/rounded_top_box"
        android:orientation="vertical"
        android:padding="25dp"
        />

    <!--    Ornamen Daun     -->
    <ImageView
        android:id="@+id/img_daun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/daun_daun"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!--  Profile Photo  -->
    <!--  Outer Red Circle  -->
    <FrameLayout
        android:id="@+id/card_photo"
        android:layout_width="116dp"
        android:layout_height="116dp"
        android:background="@drawable/bg_circle"
        android:padding="6dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <!--  Inner Circle Photo  -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_myplaces"
            app:shapeAppearanceOverlay="@style/CircleImageView"
            />
    </FrameLayout>

    <!--  Halo  -->
    <TextView
        android:id="@+id/halo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Halo,"
        android:textColor="#248F40"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/card_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!--  User Name  -->
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:textColor="#248F40"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/halo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!-- Kotak Email -->
    <LinearLayout
        android:id="@+id/info_email"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@drawable/btn_blue"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#DBFFE1"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        >

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/mail_icon"
            app:tint="#31B253"
            />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="user@email.com"
            android:textSize="16sp"
            android:textColor="#384A3A"
            />
    </LinearLayout>

    <!--     Panduan Aplikasi   -->
    <LinearLayout
        android:id="@+id/panduan"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@drawable/btn_blue"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#DBFFE1"
        app:layout_constraintTop_toBottomOf="@id/info_email"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        >

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/guide_icon"
            app:tint="#31B253"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Panduan Aplikasi"
            android:textSize="16sp"
            android:textColor="#384A3A"
            />

        <!--  spacer  -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/go"
            app:tint="#31B253"
            />
    </LinearLayout>

    <!--  Divider  -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="@color/gray_medium"
        android:alpha="0.7"
        app:layout_constraintTop_toBottomOf="@id/panduan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <!--  Logout Button  -->
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="15dp"
        android:text="@string/logout"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/accent_red"
        app:icon="@drawable/logout_icon"
        app:iconGravity="textStart"
        app:iconTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>