<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/gradient_background">
    <!--  Gunakan bg_gradient sebagai background  -->
    <!--  Overlay putih transparan  -->
    <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/white" android:scaleType="fitXY"/>
    <!--  Ornamen di bagian bawah  -->
    <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/ornamen" android:scaleType="fitCenter" android:adjustViewBounds="true" android:layout_gravity="bottom"/>
    <!--  Logo BerapaRupiah di tengah  -->
    <ImageView android:id="@+id/logo" android:layout_width="270dp" android:layout_height="270dp" android:layout_centerInParent="true" android:scaleType="fitCenter" android:src="@drawable/logo_utama"/>
    <ProgressBar android:id="@+id/progressBar" style="?android:attr/progressBarStyle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/logo" android:layout_centerHorizontal="true" android:layout_marginTop="24dp"/>
    <!--  =================================================================  -->
</RelativeLayout>